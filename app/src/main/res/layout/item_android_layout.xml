<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:orientation="horizontal"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/android_item_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="5dp"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                tools:text="这次我们抛开术语和概念，从例子入手，由浅入深地讲解 Java 的类加载机制。" />

            <TextView
                android:id="@+id/android_item_auth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/android_item_desc_tv"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                tools:text="wingjay" />

            <TextView
                android:id="@+id/android_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/android_item_auth_tv"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/android_item_auth_tv"
                android:maxLines="1"
                tools:text="2017-05-15" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="?android:attr/selectableItemBackground"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/android_item_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>
