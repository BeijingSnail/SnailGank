    <style name="radiobutton_bottom">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/radiobutton_text_color_style</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="aboutLineStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#f3433a3a</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="aboutTitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
    </style>

